.tab{
  display: flex;
  margin-top: 10px;
  margin-bottom: 10px;
  justify-content: space-around;
}
.tab view{
  width: 30%;
  height: 30px;
  line-height: 30px;
  align-items: center;
  text-align: center;
}
.tab view.active{
  width: 30%;
  background-color: #8abcd1;
  border-radius: 15px;
  color: rgb(120, 69, 238);
}
.main{
  display: flex;
  flex-direction: row;
}
.fgx{
  background: linear-gradient(to left, #48c6ef 0%, #6f86d6 100%);
  height:2px;
}
image{
  flex: 1;
  width: 290rpx;
  height: 250rpx;
}
.content{
  flex: 2;
  align-self: center;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.title{
  align-self: center;
}
